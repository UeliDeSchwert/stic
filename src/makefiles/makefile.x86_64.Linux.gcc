#
# Compilers
#
CC  = gcc
CXX = g++
FC  = gfortran


#
# MPI assignments
#
OMPI_FC = $(FC)
OMPI_CXX = $(CXX)
OMPI_CC = $(CC)
MPCXX = mpicxx
MPFC = mpif90


#
# OPTIMIZATION
#
OPTS = -O3 -g -march=native -ffast-math -lm -lpthread -lgfortran
CXXFLAGS = $(OPTS) -fPIC -std=c++11 -Wno-literal-suffix
CFLAGS = $(OPTS) -ffast-math -DHAVE_F90 -fPIC
FFLAGS = -O3 -march=native
AR = gcc-ar-4.9
OPENMP = -fopenmp


#
# GSL, FFTW3 libs.
# Any unix system should have this installed in /usr.
#
GSLPATH = /usr