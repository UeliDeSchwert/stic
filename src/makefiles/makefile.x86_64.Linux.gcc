#
# Compilers
#
CC  = gcc
CXX = g++
FC  = gfortran


#
# MPI assignments
#
OMPI_FC = $(FC)
OMPI_CXX = $(CXX)
OMPI_CC = $(CC)
MPCXX = mpicxx
MPFC = mpif90


#
# OPTIMIZATION
#
OPTS = -O3 -ffast-math -march=native -Wa,-q -lm -lpthread
CXXFLAGS = $(OPTS) -std=c++11 -Wno-literal-suffix
CFLAGS = $(OPTS) -DHAVE_F90
FFLAGS = $(OPTS)
AR = gcc-ar-6
OPENMP = -fopenmp


#
# GSL, FFTW3 libs.
# Any unix system should have this installed in /usr.
#
GSLPATH = /usr